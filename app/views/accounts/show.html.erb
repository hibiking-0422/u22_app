<h1>成績一覧</h1>

<br><br><hr color="green" noshade><br>

<table>
  <% @genes.each do |gene|%>
  <tr>
    <td align="center"><%=gene[0]%></td>
    <td align="right">　　<span><%=gene[3]%>%</td>
    <td align="right">　　<%=gene[2]%>問中<%=gene[1]%>問正解<td>
  </tr>
<% end %>
</table>

<br><br><hr color="green" noshade><br>

<% @fields.each do |field|%>
<table>
<th><%=field%></th>
  <% @fin_genes.each do |fin_gene|%>
  <tr>
    <% if field == fin_gene[4]%>
      <td align="center"><%=fin_gene[0]%></td>
      <td align="right">　　<%=fin_gene[3]%>%</td>
      <td align="right">　　<%=fin_gene[2]%>問中<%=fin_gene[1]%>問正解</td>
    <% end %>
  </tr>
  <% end %>
</table>
<br><br>
<% end %>


<hr color="green" noshade><br><br>

<% @fin_fields.each do |fin_field|%>
<table>
<th><%=fin_field%></th>
  <% @questions.each do |question|%>
  <tr>
    <% if fin_field == question[4]%>
      <td><%=question[0].match(/","/).post_match.gsub("\"", '').gsub("\)",'')%></td>
      <td align="right">　　<%=question[3]%>%</td>
      <td align="right">　　<%=question[2]%>問中<%=question[1]%>問正解</td>
    <% end %>
  </tr>
  <% end %>
</table>
<br>
<% end %>
