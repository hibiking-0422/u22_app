<head>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        
        <script src="jquery-1.10.2.min.js"></script>
        <script src="jquery-ui-1.10.3.custom.min.js"></script>
</head>       
<style>


    .box {
    width: 60%;
    padding: 0.5em 1em;
    margin: 2em 0;
    border: double 5px #4ec4d3;
    }
</style>

<center>
<h1>昨日解いた問題を復習しよう！</h1>

<br>
<div class = "box">
<table>
<% @questions.each do |question|%>
<tr id = "ck">
    <td><%= link_to question.question.match(/","/).post_match.gsub("\"", '').gsub("\)",''), "#{question.question.match(/"/).post_match.match(/","/).pre_match}",:onclick=>"window.open(this.href,'hoge', 'height=400, width=800');return false;" %></td>
</tr>
<% end %>
</div>
</center>
</table>
