            $('#m').html(min);
        }
        
        
        //タイマーを起動
        rt = setInterval(function(){
            $('#rest_h').html(('0' + hour).slice(-2));
            $('#rest_m').html(('0' + min).slice(-2));
            $('#rest_s').html(('0' + sec).slice(-2));
            
            sec++;
