        <span id = "rest_h">00</span><span>:</span><span id = "rest_m">00</span><span>:</span><span id = "rest_s">00</span><br>
        </div>
           <div ><button id = "start" disabled="disabled">スタート</button> <button id = "rest" disabled="disabled">休憩</button><button id = "stop">終了</button></div>
        </center>

    </body>
    <script type="text/javascript">
        
//タイマーのfunction
$(function(){
  
    var sec = 0;
    var min = 0;
    var hour = 0;
    
    var st,rt;
    var study_time = 0;
    var rest_time = 0;
    var ck = 0;
    
     $('#start').prop('disabled', false);
         $('#rest').prop('disabled', false);
    
     //スタートボタンクリック
    $('#start').on('click',function(){
         ck = 1;
         $('#start').prop('disabled', true);
         $('#rest').prop('disabled', false);
        clearInterval(rt); //rtのループ中止
      //  rest_time = sec + min*100 +hour*10000; 秒でまとめるのに変更
          rest_time = sec + min*60 +hour *360;
        $('#otamesi').html(rest_time);
        
       
        if(study_time == 0){
            sec = 0;min =0; hour = 0;
        }
        
        if(study_time > 0){
            sec = study_time % 60;
            $('#s').html(sec);
             hour = Math.floor(study_time /360);
            $('#h').html(hour);
            min = Math.floor( (study_time -hour*360) /60);
            $('#m').html(min);
           
        }
        
        
      
        //タイマーを起動させる
        st = setInterval(function(){
            $('#study_h').html(('0' + hour).slice(-2));
            $('#study_m').html(('0' + min).slice(-2));
            $('#study_s').html(('0' + sec).slice(-2));
            
            sec++;
            if(sec == 60){
                sec = 0;
                min++;
            };
            if(min == 60){
                min = 0;
                hour++;
            };    
            
        },1000);
        
        
    });
    
  
    
        //休憩ボタン
    $('#rest').on('click',function(){
         ck = 2;
         $('#start').prop('disabled', false);
         $('#rest').prop('disabled', true);
        clearInterval(st);
        study_time = sec + min * 60 + hour * 360;
        $('#otamesi').html(study_time);
        
        
